<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "activity-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, :url %>
  <%= text_input f, :url %>
  <%= error_tag f, :url %>

  <%= label f, :completed_at %>
  <%= date_select f, :completed_at %>
  <%= error_tag f, :completed_at %>

  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
